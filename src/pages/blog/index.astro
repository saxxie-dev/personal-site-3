---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Blog">
  <h1 class="text-4xl font-bold mb-8">Blog</h1>
  <div class="space-y-8">
    {posts.map(post => (
      <article class="pb-8 border-b border-gray-200 dark:border-gray-800 last:border-0">
        <h2 class="text-2xl font-bold mb-2">
          <a href={`/blog/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400">
            {post.data.title}
          </a>
        </h2>
        <time datetime={post.data.date.toISOString()} class="text-sm text-gray-600 dark:text-gray-400 mb-4 block">
          {post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <p class="text-gray-600 dark:text-gray-400 mb-4">{post.data.excerpt}</p>
        <a href={`/blog/${post.slug}`} class="text-primary-600 dark:text-primary-400 hover:underline">
          Read more â†’
        </a>
      </article>
    ))}
  </div>
</Layout>